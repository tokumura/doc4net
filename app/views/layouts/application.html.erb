<!DOCTYPE html>
<html>
<head>
  <title>Doc4net - クラスリファレンスジェネレーター</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% if request.path_info.include?("execute") == false %>
<body class="signin">
<% else %>
<body>
<% end %>
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <% if @appname %>
          <a class="navbar-brand" href="#" style="color:#eeeeee; font-size:30px;">
            <%=@appname%> クラスリファレンス</a>
        <% else %>
          <a class="navbar-brand" href="#" style="color:#eeeeee; font-size:30px;">
            Doc4Net - クラスリファレンスジェネレーター for Visual Studio</a>
        <% end %>
      </div>
      <% if request.path_info.include?("execute") %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
        <%= form_tag('/generators/execute', :multipart => true, :class => 'form-inline') do %>
          <%= file_field_tag 'xml', :style => "color:#eeeeee" %>
          <%= submit_tag 'インポート', :class => "btn btn-primary btn-xs" %>
          <%= hidden_field_tag 'appname', @appname %>
        <% end %>
        </ul>
      </div>
      <% end %>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <%= yield %>
    </div>
  </div>

</body>
</html>
